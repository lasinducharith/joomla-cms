<?xml version="1.0" encoding="utf-8"?>
<extension
        type="module"
        version="3.1"
        client="site"
        method="upgrade">
    <name>mod_maps</name>
    <author>Joomla! Project</author>
    <creationDate>June 2013</creationDate>
    <copyright>Copyright (C) 2005 - 2013 Open Source Matters. All rights reserved.</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <authorEmail>admin@joomla.org</authorEmail>
    <authorUrl>www.joomla.org</authorUrl>
    <version>3.1.0</version>
    <description>MOD_MAPS_XML_DESCRIPTION</description>
    <files>
        <filename module="mod_maps">mod_maps.php</filename>
        <folder>tmpl</folder>
        <folder>language</folder>
        <filename>helper.php</filename>
        <filename>index.html</filename>
        <filename>mod_maps.xml</filename>
    </files>
    <languages>
        <language tag="en-GB">language/en-GB/en-GB.mod_maps.ini</language>
        <language tag="en-GB">language/en-GB/en-GB.mod_maps.sys.ini</language>
    </languages>
    <help key="JHELP_EXTENSIONS_MODULE_MANAGER_MAPS"/>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field
		            name="mapType"
		            type="list"
		            default="ROADMAP"
		            label="MOD_MAPS_MAP_TYPE_LABEL"
                    description="MOD_MAPS_MAP_TYPE_DESC">
                        <option value="HYBRID">MOD_MAPS_HYBRID_LABEL</option>
                        <option value="ROADMAP">MOD_MAPS_ROADMAP_LABEL</option>
                        <option value="SATELLITE">MOD_MAPS_SATELLITE_LABEL</option>
                        <option value="TERRAIN">MOD_MAPS_TERRAIN_LABEL</option>
                </field>

                <field
                        name="zoom"
                        type="text"
                        default="1"
                        label="MOD_MAPS_ZOOM_LABEL"
                        description="MOD_MAPS_ZOOM_DESC" />

                <field
                        name="width"
                        type="text"
                        default=""
                        label="MOD_MAPS_WIDTH_LABEL"
                        description="MOD_MAPS_WIDTH_DESC" />

                <field
                        name="height"
                        type="text"
                        default="350"
                        label="MOD_MAPS_HEIGHT_LABEL"
                        description="MOD_MAPS_HEIGHT_DESC" />

                <field
		                name="mapCenterType"
		                type="radio"
		                default="address"
		                class="btn-group"
		                label="MOD_MAPS_CENTER_LABEL"
                        description="MOD_MAPS_CENTER_DESC">
                            <option value="address">MOD_MAPS_ADDRESS_BASED_LABEL</option>
                            <option value="coordinate">MOD_MAPS_CORDINATES_BASED_LABEL</option>
                </field>

                <field
		               name="mapCenterAddress"
		               type="text"
                       label="MOD_MAPS_CENTER_ADDRESS_LABEL"
                       description="MOD_MPAS_CENTER_ADDRESS_DESC" />


                <field
		               name="mapCenterCoordinate"
		               type="text"
                       label="MOD_MAPS_CENTER_CORDINATE_LABEL"
                       description="MOD_MAPS_CENTER_CORDINATE_DESC" />

	            <field
			           name="mapApiKey"
	                   type="text"
	                   label="MOD_MAPS_API_KEY_LABEL"
	                   description="MOD_MAPS_API_KEY_DESC" />

            </fieldset>

            <fieldset
                    name="advanced">
                <field
                        name="layout"
                        type="modulelayout"
                        label="JFIELD_ALT_LAYOUT_LABEL"
                        description="JFIELD_ALT_MODULE_LAYOUT_DESC"/>
                <field
                        name="moduleclass_sfx"
                        type="textarea" rows="3"
                        label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL"
                        description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC"/>
                <field
                        name="owncache"
                        type="list"
                        default="1"
                        label="COM_MODULES_FIELD_CACHING_LABEL"
                        description="COM_MODULES_FIELD_CACHING_DESC">
                    <option
                            value="1">JGLOBAL_USE_GLOBAL
                    </option>
                    <option
                            value="0">COM_MODULES_FIELD_VALUE_NOCACHING
                    </option>
                </field>
            </fieldset>
        </fields>
    </config>
</extension>
